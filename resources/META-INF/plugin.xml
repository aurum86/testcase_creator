<idea-plugin>
  <id>lt.auciunas.tadas.testCaseCreator</id>
  <name>Test case creator</name>
  <version>1.0</version>

  <description>PHPStorm plugin for creating test classes</description>
  <change-notes></change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!--<depends>com.intellij.modules.lang</depends>-->
  <!-- Mark as compatible w/ all products based on the IntelliJ Platform (IntelliJ IDEA, RubyMine, WebStorm, PhpStorm, PyCharm and AppCode) -->
  <depends>com.intellij.modules.lang</depends>

  <!-- Dependency on PHP functionality -->
  <depends>com.jetbrains.php</depends>
  <depends>com.intellij.modules.platform</depends>

  <project-components>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <actions>
    <action id="lt.auciunas.tadas.testCaseCreator.TestFileAction" class="lt.auciunas.tadas.testCaseCreator.TestFileAction"
            text="Create test file" description="Create a test class">
      <keyboard-shortcut keymap="$default" first-keystroke="shift alt Q"/>
      <!--<add-to-group group-id="ToolsMenu" anchor="last"/>-->
    </action>
  </actions>

</idea-plugin>